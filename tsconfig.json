{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*", "test/*"]
    },
    "types": ["node", "express", "jest", "jest-matcher-utils"],
    "strictPropertyInitialization": true,
    "outDir": "dist",

    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",

    "strict": true,

    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "removeComments": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true
  }
}

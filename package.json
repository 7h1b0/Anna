{
  "name": "anna",
  "version": "3.0.0",
  "description": "REST api for home automation",
  "main": "src/index.js",
  "author": "7h1b0",
  "engines": {
    "node": ">= 8.6.0"
  },
  "dependencies": {
    "ajv": "^6.5.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cron": "^1.4.0",
    "express": "^4.16.3",
    "knex": "^0.15.2",
    "mysql": "^2.16.0",
    "require-dir": "^1.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "mockdate": "^2.0.2",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0"
  },
  "scripts": {
    "eslint": "eslint --max-warnings 0 src migrations seeds",
    "test": "jest src --watch --notify --runInBand",
    "coverage": "jest src --coverage --ci --runInBand --silent --forceExit",
    "start": "nodemon --watch src index.js",
    "precommit": "lint-staged",
    "postversion": "git push --follow-tags",
    "db:migrate": "knex migrate:latest --knexfile src/knexfile.js",
    "db:rollback": "knex migrate:rollback --knexfile src/knexfile.js",
    "db:seed": "knex seed:run --knexfile src/knexfile.js"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --single-quote --trailing-comma all --print-width 80 --write",
      "git add"
    ]
  },
  "jest": {
    "testURL": "http://localhost"
  }
}
